{% extends 'layouts/layout-adherent.html.twig' %}{%block title%}Espace adhérent{%endblock%} {% block body %}

<!-- BEGIN PAGE BAR -->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="#">Espace adhérent</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Service</span>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Demande souscription de la carte VISA UBA</span>
        </li>
    </ul>
    <div class="page-breadcrumb pull-right">
        <div class="badge badge-orange">
            Espace sécurisé <i class="fa fa-lock"></i>
        </div>
    </div>
</div>
<!-- END PAGE BAR -->
<!-- BEGIN PAGE TITLE-->
<h1 class="page-title">Demande de souscription de la carte VISA prépayée UBA </h1>
<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->

<div class="row">

    {% for message in app.session.flashbag.get('success') %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="alert alert-block alert-success fade in">
                <button type="button" class="close" data-dismiss="alert"></button>
                <p>
                    <stronng>{{message}}</stronng>
                </p>
            </div>
        </div>
    </div>
    {% endfor %} {% for message in app.session.flashbag.get('error') %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="alert alert-block alert-danger fade in">
                <button type="button" class="close" data-dismiss="alert"></button>
                <p>
                    <stronng>{{message}}</stronng>
                </p>
            </div>
        </div>
    </div>
    {% endfor %}
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption font-green-sharp">
                <i class="fa fa-pencil-square-o font-green-sharp"></i>
                <span class="caption-subject bold uppercase"> Formulaire de demande de souscription</span>
            </div>
        </div>
        <div class="portlet-body">
            <form class="form-horizontal formSubmit" role="form" action="{{path('actionSouscription')}}" id="form" method="post" enctype="multipart/form-data">
                <div class="form-body">
                    <div class="form-group">
                        <label class="col-md-4 control-label">Revenu mensuel </label>
                        <div class="col-md-5">
                            <select class="form-control" name="revenu_mensuel" required>
                                                    <option>Inferieur à 250.000 F CFA</option>
                                                    <option>Inferieur à 500.000 F CFA</option>
                                                    <option>Inferieur à 1.000.000 F CFA</option>
                                                    <option>Superieur à 1.000.000 F CFA</option>
                                                </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">Type de carte souhaitée </label>
                        <div class="col-md-5">
                            <select class="form-control" name="type_carte" required>
                                <option>Instantanée</option>
                                <option>Personnalisée</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Nom à inscrire sur la carte </label>
                        <div class="col-md-5">
                            <input type="text" class="form-control" placeholder="Nom à inscrire sur la carte " name="nom_carte" required>
                            <!-- Mettre par défaut le nom de l'utilisateur -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Êtes-vous client UBA?</label>
                        <div class="col-md-5">
                            <select class="form-control" name="client_uba" id="client_uba" required>
                                    <option value="OUI" >Oui</option>
                                    <option value="NON" >Non</option>
                                </select>
                        </div>
                    </div>

                    <div id="numberCarte">

                    <div class="form-group">
                            <label class="control-label col-md-4">Type de compte</label>
                            <div class="col-md-5">
                                <select id="type_compte" class="form-control" name="type_compte" required>
                                        <option value="Courant" >Courant</option>
                                        <option value="Epargne" >Epargne</option>
                                    </select>
                            </div>
                        </div>
                    <div class="form-group" >
                        <label class="col-md-4 control-label">Si oui, préciser le numéro de la carte</label>
                        <div class="col-md-5">
                            <input type="text" class="form-control" placeholder="Préciser le numéro de la carte" id="numero_carte" name="numero_carte">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-4">Télécharger le scan de votre CNI</label>
                    <div class="col-md-5">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="input-group input-large">
                                <div class="form-control uneditable-input input-fixed input-medium" data-trigger="fileinput">


                                    <i class="fa fa-file fileinput-exists"></i>&nbsp;
                                    <span class="fileinput-filename"> </span>
                                </div>
                                <span class="input-group-addon btn default btn-file">
                                    <span class="fileinput-new"> Choisir le fichier </span>
                                    <span class="fileinput-exists"> Changer </span>
                                    <input type="file" name="cni" id="cni" required> </span>
                                <a href="javascript:;" class="input-group-addon btn red fileinput-exists" data-dismiss="fileinput"> Retirer </a>
                            </div>
                        </div>
                    </div>
                </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label">Date de la demande</label>
                        <div class="col-md-5">
                            <input disabled type="text" class="form-control" placeholder="Date de souscription" value='{{ "now"|date("d/m/Y") }}'>
                        </div>
                    </div>
                </div>

        </div>
        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-4 col-md-8">
                    <button class="btn green btnSubmit" type="button">
                        <i class="fa fa-check"></i> Valider</button>
                    <button type="reset" class="btn btn-default">Annuler</button>
                </div>
            </div>
        </div>
        </form>
    </div>
</div>
</div>

{%block stylesheets%}
<script>
    $(document).ready(function (e){
        $('#client_uba').on('change', function (e){
            if($(this).val() == "NON"){
                $('#numberCarte').hide();
                $('#type_compte').val("");
                $('#numero_carte').val("");
            }else{
                $('#numberCarte').show();
            }
        });
        
        
    })
</script>
{%endblock%}

{% endblock %}